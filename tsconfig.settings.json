{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@0local/*": [
        "./packages/*/src"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./packages/types"
    ],
    "composite": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
